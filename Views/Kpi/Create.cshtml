@model KpiNew.Dto.CreateKpiRequestModel

@{
    Layout = "_DashBoard"; 
 }

<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:forestgreen">Register Kpi</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to create Kpi.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="Rating" class="control-label"></label>
                            <input asp-for="Rating" class="form-control" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>


                    </div>
              
                    

                          <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>

                </form> 
                    


                  
               
            </div>
        </div>

    </div>
</div>


