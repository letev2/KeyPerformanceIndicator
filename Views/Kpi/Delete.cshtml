@model KpiNew.Dto.KpiDto

@{
    Layout = "_DashBoard"; 
 }

   
<h3>Are you sure you want to delete this Kpi?</h3>
<div style="font-size: 130%;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Rating:
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>
        <dt class="col-sm-2">
            Employee:
        </dt>
      
        @foreach (var item in Model.Employee)
       {
             <dd class="col-sm-10">
               @item.FirstName
            </dd>

              <dd class="col-sm-10">
               @item.Department
             </dd>

       }

    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>