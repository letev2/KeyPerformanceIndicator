 @{
    Layout = "_DashBoard"; 
 }


@model KpiNew.Dto.RoleDto
 
<h3>Are you sure you want to delete this Role?</h3>
<div style="font-size: 130%;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Discription:
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
       @foreach (var item in Model.Users)
       {
         <dd class="col-sm-10">
            @item.Email
         </dd>
        
         <dt class="col-sm-2">
            Role:
         </dt>

          <dd class="col-sm-10">
            @item.Roles
         </dd>
        

       }


    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>