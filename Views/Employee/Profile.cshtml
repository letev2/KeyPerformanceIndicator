
@{
    Layout = "_Employee";
}

@model KpiNew.Dto.EmployeeDto

@using Microsoft.AspNetCore.Identity;

@{
   Layout = null; 
}
<dl class="row">
<dt class="col-sm-2">
    FirstName:
</dt>
<dd class="col-sm-10">
    @Model.FirstName
</dd>


<dt class="col-sm-2">
    LastName:
</dt>
<dd class="col-sm-10">
    @Model.LastName
</dd>


<dt class="col-sm-2">
    Gender:
</dt>
<dd class="col-sm-10">
    @Model.Gender
</dd>


<dt class="col-sm-2">
    Address:
</dt>
<dd class="col-sm-10">
    @Model.Address
</dd>


<dt class="col-sm-2">
    City:
</dt>
<dd class="col-sm-10">
    @Model.City
</dd>


<dt class="col-sm-2">
    DateOfBirth:
</dt>
<dd class="col-sm-10">
    @Model.DateOfBirth
</dd>


<dt class="col-sm-2">
    DepartmentName:
</dt>
<dd class="col-sm-10">
    @Model.Department.Name
</dd>


<dt class="col-sm-2">
    DepartmentDiscription:
</dt>
<dd class="col-sm-10">
    @Model.Department.Description
</dd>

<dt class="col-sm-2">
    Email:
</dt>
<dd class="col-sm-10">
    @Model.Email
</dd>


<dt class="col-sm-2">
    PhoneNumber:
</dt>
<dd class="col-sm-10">
    @Model.PhoneNumber
</dd>
  
    <dt class="col-sm-2">
        Photo:
    </dt>
    <dd class="col-sm-10">
        <img class="card-img" style="width: 100px; height: 100px;" src="~/EmployeePhotos/@Model.EmployeeImage">
    </dd>
    

 <dt class="col-sm-2">
        Employee Kpis:
    </dt>
    @foreach (var employee in Model.Kpis)
    {
        
        <dt class="col-sm-2">
           Kpi Name :
        </dt>
        <dd class="col-sm-10">
            @employee.Name
        </dd>

        <dt class="col -sm-2">
            Rating :
        </dt>
        <dd class="col-sm-10">
            @employee.Rating
        </dd>

   
    }

  <button style="background-color:wheat;"><a asp-controller="Employee" asp-action="EmployeeDashBoard"> Back Employee DashBoard </a> </button>
    
        
</dl>