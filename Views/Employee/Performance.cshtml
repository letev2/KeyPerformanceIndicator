@using KpiNew.Enum

@model KpiNew.Dto.RatingPerformance
@{
    Layout = "_DashBoard"; 
 }


<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:forestgreen">EmployeePerformance</h1>
                    <p class="tagcolor" style="color:green"> Employee Performance.</p>
                    <hr class="tagcolor" style="color:greenyellow">

                </div>
                <form asp-action="Performance" asp-controller="Employee" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        
                        <div class="form-group col-sm-6">
                            <label asp-for="KpiId" class="control-label"></label>
                            <input asp-for="KpiId" class="form-control" />
                            <span asp-validation-for="KpiId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="Year" class="control-label"></label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="Month" class="control-label"></label>
                            <select asp-for="Month" asp-items="@Html.GetEnumSelectList(typeof(Month))" required></select>                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>

                     
                
                    </div>

                            <div class="form-group ">
                                <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                           </div>

                </form> 
                    


                  
               
            </div>
        </div>

    </div>
</div>
